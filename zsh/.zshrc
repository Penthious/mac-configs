###############################################################################
# ZSH settings
###############################################################################
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
source $ZSH/oh-my-zsh.sh

###############################################################################
# PLUGINS
###############################################################################
plugins=(git)

###############################################################################
# ALIASES
###############################################################################
alias vim=nvim
alias ls=eza
alias cat=bat

###############################################################################
# EVALS
###############################################################################
eval  $(thefuck --alias)
eval "$(starship init zsh)"


###############################################################################
# Custom file used to overide anything without having to edit this file
###############################################################################
if [[ -a ~/.custom.zsh ]]; then
    source ~/.custom.zsh
fi
